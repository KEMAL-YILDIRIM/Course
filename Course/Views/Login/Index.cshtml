@model Course.Models.LoginModel

@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-md-offset-5 col-md-3">
                <div class="form-login">
                    <h2>KULLANICI GİRİŞ</h2>
                    @Html.TextBoxFor(m=>m.Email , new { @class = "form-control input-sm chat-input" , @placeholder = "Kullanıcı Adı" })
                    @Html.ValidationMessageFor(m=>m.Email)
                    @*<input type="text" id="userName" class="form-control input-sm chat-input" placeholder="Kullanıcı Adı" />*@
                    <br>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-sm chat-input", @placeholder = "Şifre" })
                    @Html.ValidationMessageFor(m => m.Password)
                    <br>
                    <div class="wrapper text-right">
                        <input type="submit" class="btn btn-primary btn-md" value="GİRİŞ YAP" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}

@Html.ValidationSummary(true)
