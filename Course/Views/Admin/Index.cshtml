                    </tr>
                </table>
                <div>
                    <label class="input-group">Doğru Cevap Seç</label>
                    @Html.DropDownListFor(x => x.Cevap3, new SelectList(new List<SelectListItem> {
                                              new SelectListItem {Value="Cevap3A",Text="A"},
                                              new SelectListItem {Value="Cevap3B",Text="B"},
                                              new SelectListItem {Value="Cevap3C",Text="C"},
                                              new SelectListItem {Value="Cevap3D",Text="D"},
                                          },
                            "Value", "Text", "Cevap3A"), new { @class = "form-control" })
                    <!-- select list-->
                </div>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Soru 4</span>
                            @Html.TextBoxFor(x => x.Soru2, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                        </div>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">A)</span>
                                @Html.TextBoxFor(x => x.Cevap4A, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                            </div>
                        </td>
                        <td>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">B)</span>
                                @Html.TextBoxFor(x => x.Cevap4B, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">C)</span>
                                @Html.TextBoxFor(x => x.Cevap4C, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                            </div>
                        </td>
                        <td>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">D)</span>
                                @Html.TextBoxFor(x => x.Cevap4D, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                            </div>
                        </td>
                    </tr>
                </table>
                @{Model.Tarih = DateTime.Now; }
                @Html.HiddenFor(a => a.Tarih)
                <div>
                    <label class="input-group">Doğru Cevap Seç</label>
                    @Html.DropDownListFor(x => x.Cevap4, new SelectList(new List<SelectListItem> {
                                              new SelectListItem {Value="Cevap4A",Text="A"},
                                              new SelectListItem {Value="Cevap4B",Text="B"},
                                              new SelectListItem {Value="Cevap4C",Text="C"},
                                              new SelectListItem {Value="Cevap4D",Text="D"},
                                          },
                            "Value", "Text", "Cevap4A"), new { @class = "form-control" })
                    <!-- select list-->
                </div>
                <input type="submit" value="SINAV OLUŞTUR" />
            </div>
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->

                    }
