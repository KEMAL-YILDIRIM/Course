@model IEnumerable<Course.Data.Exam>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div>
    <span class="glyphicon glyphicon-arrow-right">
        @Html.ActionLink("Sinav Ekle", "Index", "Admin")
    </span>
</div>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Tarih</th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>&nbsp;
                    <td>@item.Baslik</td>&nbsp;
                    <td>@item.Tarih</td>&nbsp;
                    <td>@Html.ActionLink("Sil", "Sil", "admin", new { @item.Id }, new { @class= "" })</td>
                </tr>
                <br />
            }
        }
    </table>
</div>



